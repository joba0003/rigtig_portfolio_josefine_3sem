---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import Header from '../components/Header.astro';
import group3 from '../assets/images/group3.png';
import '../styles/tailwind.css';
import cover from '../assets/images/cover.jpg';

---
<MainLayout title="Josefines portfolio">
	<Header />
	<div class="relative h-screen w-screen">
		<!-- Baggrundsbillede -->
		<Image 
		  src={group3} 
		  alt="background" 
		  class="absolute inset-0 w-full h-full object-contain bg-amber-100" 
		/>
	  
		<!-- Tekst inde i baggrundsbilledet til venstre-->
		<h1 class="absolute top-1/6 left-1/6 text-2xl sm:text-3xl md:text-5xl lg:text-6xl text-amber-100 font-bold z-10">
			Josefine
		  </h1>

		  <h1 class="absolute bottom-1/6 right-1/6 text-2xl sm:text-3xl md:text-5xl lg:text-6xl text-amber-100 font-bold z-10">
			Banke
		  </h1>
		  
	  
		<!-- Overlay billede centreret -->
		<div class="absolute inset-0 flex items-center justify-center z-10">
		  <Image 
			src={cover} 
			alt="foreground" 
			class="w-24 h-auto sm:w-32 md:w-48 lg:w-80" 
		  />
		</div>
	  </div>
	  
	  
  </MainLayout>

  